{
    "name": "RiskiTools",
    "author": "Will Andresen",
    "description": "Adds hooks to inject the custom JS that makes Riskipedia possible",
    "version": "1.0",
    "type": "parserhook",
    "requires": {
        "MediaWiki": ">= 1.35.0"
    },
    "ExtensionMessagesFiles": {
        "RiskiToolsMagic": "RiskiTools.i18n.magic.php"
    },
    "ResourceModules": {
        "ext.fetchData": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.fetchData.js"
            ],
            "targets": [
                "desktop", "mobile"
            ]
        },
        "ext.userInfoInput": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.userInfoInput.js"
            ],
            "targets": [
                "desktop", "mobile"
            ]
        }
    },
    "Hooks": {
        "ParserFirstCallInit": "RiskiToolsHooks::onParserFirstCallInit"
    },
    "AutoloadClasses": {
        "RiskiToolsHooks": "includes/RiskiTools.php"
    },
    "manifest_version": 2
}
