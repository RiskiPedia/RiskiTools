{
    "name": "RiskiTools",
    "author": "Will Andresen, Gavin Andresen",
    "description": "Adds hooks to inject the custom JS that makes Riskipedia possible",
    "version": "1.0",
    "type": "parserhook",
    "requires": {
        "MediaWiki": ">= 1.35.0"
    },
    "ResourceModules": {
        "ext.RiskUtils": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.RiskUtils.js"
            ]
        },
        "ext.cookie": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.cookie.js"
            ]
        },
        "ext.pagestate": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.pagestate.js"
            ]
        },
        "ext.DropDown": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.DropDown.js"
            ]
        },
        "ext.RiskDisplay": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.RiskDisplay.js"
            ]
        },
        "ext.RiskParameter": {
            "scripts": [
                "extensions/RiskiTools/includes/ext.RiskParameter.js"
            ]
        }
    },
    "Hooks": {
        "BeforePageDisplay" : "RiskiToolsHooks::onBeforePageDisplay",
        "PageDelete": "RiskiToolsHooks::onPageDelete",
	"LoadExtensionSchemaUpdates": "RiskiToolsHooks::onLoadExtensionSchemaUpdates",
        "ParserFirstCallInit": "RiskiToolsHooks::onParserFirstCallInit",
        "RevisionFromEditComplete": "RiskiToolsHooks::onRevisionFromEditComplete"
    },
    "AutoloadClasses": {
        "RiskiToolsHooks": "includes/RiskiTools.php",
        "ApiUpdateRiskiData": "includes/api/ApiUpdateRiskiData.php"
    },
    "APIModules": {
        "updateriskidata": "ApiUpdateRiskiData"
    },
    "manifest_version": 2
}
